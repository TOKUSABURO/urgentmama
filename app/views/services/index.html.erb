<p id="notice"><%= notice %></p>

<h1>お助け一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>期間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.title %></td>
        <td><%= service.content %></td>
        <td><%= service.deadline %></td>
        <td><%= link_to '一覧', service %></td>
        <td><%= link_to '編集', edit_service_path(service) %></td>
        <td><%= link_to '削除', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

